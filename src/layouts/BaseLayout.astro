---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  hideHeader?: boolean;
  footerText?: string;
}

const {
  title = 'Astro Starter',
  description = 'Static blog-ready starter powered by Astro.',
  hideHeader = false,
  footerText,
} = Astro.props as Props;

const base = import.meta.env.BASE_URL || '/';
const year = new Date().getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
    <link rel="icon" type="image/png" href={`${base}BY-logo.png`} />
  </head>
  <body>
    <div class="page">
      {!hideHeader && (
        <header class="site-header">
          <div class="shell">
            <a class="brand" href={base}>Astro Starter</a>
            <nav class="nav">
              <a href={base}>Home</a>
              <a href={`${base}blog/`}>Blog</a>
            </nav>
          </div>
        </header>
      )}

      <main class="shell content">
        <slot />
      </main>

      <footer class="site-footer">
        <div class="shell">
          <p>{footerText || `Â© ${year} Astro Starter. All rights reserved.`}</p>
        </div>
      </footer>
    </div>
  </body>
</html>
