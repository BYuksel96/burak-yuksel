---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Astro Starter',
  description = 'Static blog-ready starter powered by Astro.',
} = Astro.props as Props;

const base = import.meta.env.BASE_URL || '/';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    {description && <meta name="description" content={description} />}
  </head>
  <body>
    <header class="site-header">
      <div class="shell">
        <a class="brand" href={base}>Astro Starter</a>
        <nav class="nav">
          <a href={base}>Home</a>
          <a href={`${base}blog/`}>Blog</a>
        </nav>
      </div>
    </header>

    <main class="shell content">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="shell">
        <p>Deployed as static pages. Ready for GitHub Pages.</p>
      </div>
    </footer>
  </body>
</html>
